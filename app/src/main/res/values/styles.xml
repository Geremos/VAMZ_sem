<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="custom_timepicker" parent="@style/theme">
        <item name="android:textColorPrimary">@color/buttons</item> <!-- color for digits -->
        <item name="android:textColor">@color/buttons</item> <!-- color for colon -->
        <item name="android:colorControlNormal">@null</item> <!-- color for (horizontal) delimeters -->
        <item name="android:textSize">50sp</item>
    </style>
</resources>